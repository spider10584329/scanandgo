# ============================================
# BACKEND PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# This is an example file for production deployment
# Copy this to .env and update with your production values

# ============================================
# Database Configuration
# ============================================
# Production MySQL connection string
# Format: mysql+pymysql://username:password@host:port/database
DATABASE_URL=mysql+pymysql://scanandgo_user:YOUR_SECURE_PASSWORD@localhost:3306/scanandgo_prod

# ============================================
# JWT Configuration (Authentication)
# ============================================
# IMPORTANT: Generate a new secure secret key for production!
# Command: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_32_CHARS_MIN
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=12

# ============================================
# PulsePoint API Configuration
# ============================================
PULSEPOINT_API_URL=https://api.pulsepoint.clinotag.com
PULSEPOINT_PROJECT_ID=20
PULSEPOINT_API_USERNAME=YOUR_PULSEPOINT_USERNAME
PULSEPOINT_API_PASSWORD=YOUR_PULSEPOINT_PASSWORD

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=False

# ============================================
# CORS Configuration
# ============================================
# IMPORTANT: Update with your production domain(s)
# Format: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Environment
# ============================================
ENVIRONMENT=production

# ============================================
# Redis/Cache Configuration (Recommended for Production)
# ============================================
REDIS_URL=redis://localhost:6379/0
CACHE_ENABLED=True
CACHE_TTL_SECONDS=300

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
